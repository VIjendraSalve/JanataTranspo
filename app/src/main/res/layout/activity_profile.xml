<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/efaUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/md_yellow_A700"
        android:text="@string/title_edit"
        android:textColor="@android:color/black"
        android:theme="@style/MyMaterialTheme"
        app:icon="@drawable/ic_edit"
        app:iconTint="@android:color/black"
        app:rippleColor="@color/md_yellow_700"
        app:strokeColor="@color/md_yellow_700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/apptheme" />

   <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp">

            <!--Top Profile Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTime"
                        android:layout_gravity="right"
                        android:layout_toRightOf="@+id/ivPostImg">

                        <TextView
                            android:id="@+id/tvMainVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_border_new"
                            android:drawableLeft="@drawable/ic_verified_12"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/freshwhite"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="VERIFIED"
                            android:textAllCaps="true"
                            android:textColor="@color/freshwhite"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvMainUnVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/expire_border"
                            android:drawableLeft="@drawable/ic_un_verified_12"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/freshwhite"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="KYC Pending"
                            android:textAllCaps="true"
                            android:textColor="@color/freshwhite"
                            android:textStyle="bold"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <RelativeLayout
                            android:id="@+id/rlProfilePic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivProfilePic"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/default_user"
                              />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivAddImage"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/ivProfilePic"
                                android:layout_marginLeft="-35dp"
                                android:layout_marginTop="-50dp"
                                android:layout_toRightOf="@+id/ivProfilePic"
                                android:src="@drawable/ic_camera"
                                android:tint="@color/md_yellow_700"
                                android:visibility="visible"
                               />

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/llContactDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/rlProfilePic"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRole"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Role"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/red"
                                android:visibility="gone"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvCompanyName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:visibility="visible"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvOwnerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Role"
                                android:textSize="16sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:autoLink="phone"
                                android:drawableLeft="@drawable/ic_call"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black" />


                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:autoLink="email"
                                android:drawableLeft="@drawable/ic_email"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black"
                                android:textColorLink="@color/black" />

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@drawable/ic_location"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:text="City"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@drawable/ic_location"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvBloodGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_baseline_opacity_24"
                                android:drawableTint="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />


                        </LinearLayout>


                        <!--Aadhar Card-->
                        <RelativeLayout
                            android:id="@+id/rlEditAadharView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llContactDetails"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/tvAadharNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@drawable/ic_card"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:text="Aadhar No"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:id="@+id/rlEditAadhar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/tvAadharNo">

                                <TextView
                                    android:id="@+id/tvAadharVerified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/verified_border"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="VERIFIED"
                                    android:textAllCaps="true"
                                    android:textColor="@color/green"
                                    android:textSize="10dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvAadharPending"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/un_verified_border"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="PENDING"
                                    android:textAllCaps="true"
                                    android:textColor="@color/logo_orange_color"
                                    android:textSize="10dp"
                                    android:visibility="gone" />

                                <RelativeLayout
                                    android:id="@+id/rlAddhar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/un_verified_border"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/ivEditAadhar"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_edit"
                                        app:tint="@color/logo_orange_color" />

                                    <TextView
                                        android:id="@+id/tvAadharUnVerified"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@+id/ivEditAadhar"
                                        android:text="UN_VERIFIED"
                                        android:textAllCaps="true"
                                        android:textColor="@color/logo_orange_color"
                                        android:textSize="10dp"
                                        android:visibility="visible" />
                                </RelativeLayout>


                            </RelativeLayout>
                        </RelativeLayout>

                        <!--GST Card-->
                        <RelativeLayout
                            android:id="@+id/rlEditGSTView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlEditAadharView"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/tvGSTNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@drawable/ic_card"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/black"
                                android:text="GST IN"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/tvGSTNo">

                                <TextView
                                    android:id="@+id/tvGstVerified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/verified_border"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="VERIFIED"
                                    android:textAllCaps="true"
                                    android:textColor="@color/green"
                                    android:textSize="10dp"
                                    android:visibility="gone" />


                                <RelativeLayout
                                    android:id="@+id/rlGSTUnVerifiedView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/un_verified_border"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp">

                                    <ImageView
                                        android:id="@+id/ivEditGST"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_edit"
                                        app:tint="@color/logo_orange_color" />

                                    <TextView
                                        android:id="@+id/tvGstUnVerified"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@+id/ivEditGST"
                                        android:text="UN_VERIFIED"
                                        android:textAllCaps="true"
                                        android:textColor="@color/logo_orange_color"
                                        android:textSize="10dp"
                                        android:visibility="visible" />
                                </RelativeLayout>


                            </RelativeLayout>
                        </RelativeLayout>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAadharNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appBarLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/blue"
                        android:padding="10dp"
                        android:text="Note: You Aadhar card is uploaded to system. Soon you get update"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        android:visibility="gone" />

                </LinearLayout>


            </RelativeLayout>
            <!--Experience Bottom Cards-->
            <LinearLayout
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Account Details"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Bank Name"
                                    android:textColor="@color/dark_gray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvBankName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Account Number"
                                    android:textColor="@color/dark_gray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvAccNo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="IFSC Code"
                                    android:textColor="@color/dark_gray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvIfscCode"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Branch City"
                                    android:textColor="@color/dark_gray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvBranchCity"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="PAN Number"
                                    android:textColor="@color/dark_gray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvPanNo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--Review Bottom Cards-->
            <LinearLayout
                android:id="@+id/linear_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Pan Card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <RelativeLayout
                            android:id="@+id/rlPancard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/ivEditPancard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvPANCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="PAN Card"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/rlPancard"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:id="@+id/ivPanCard"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_weight="1"
                                android:src="@drawable/default_square" />

                            <ImageView
                                android:id="@+id/ivEditPan"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/ic_edit"
                                android:visibility="gone"
                                app:tint="@color/colorPrimary" />
                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>

                <!-- Aadhar Card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="60dp">


                        <RelativeLayout
                            android:id="@+id/rlAddhar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <!--<ImageView
                                android:id="@+id/ivEditAadhar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/colorPrimary" />-->

                            <TextView
                                android:id="@+id/tvAadharTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Aadhar Images"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlAddhar1"
                            android:layout_marginTop="25dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:text="Front Image"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                                <RelativeLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/ivAadharImgOne"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_weight="1"
